<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logins"
    tools:context="ventres.intellinects.com.locationtracker.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:layout_marginBottom="130sp"
        android:layout_marginTop="60sp"
        android:alpha="0.95"
        android:background="@drawable/white"
        android:gravity="center">


        <EditText
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:hint="Email Id"
            android:inputType="text"

            />


        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="95dp"
            android:drawableRight="@drawable/ic_https_black_24dp"
            android:hint="Password"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/checkboxs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="155dp"
            android:text="Remember Me" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="190dp"
            android:alpha="2.0"
            android:background="@color/colorPrimaryDark"
            android:text="LOGIN"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>
