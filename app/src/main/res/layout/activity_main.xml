<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueback"
    tools:context="ventres.intellinects.com.locationtracker.MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/locationText"
       android:textColor="@color/white"
       android:textSize="17sp"
       android:textAlignment="center"
       android:layout_centerInParent="true"
       android:layout_marginTop="10dp"
       android:padding="10dp"
       />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/locationText"

        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entering office"
            android:id="@+id/in"
            android:checked="true"
            android:textColor="@color/white"

           />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaving office"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:id="@+id/out"
           />
    </RadioGroup>

    <Button
        android:id="@+id/getLocationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_location"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:background="@color/red"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/get_current_address"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/send_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
         android:background="@color/red"
         android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="SEND LOCATION"
        android:layout_marginRight="10dp" />


</RelativeLayout>
